<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/bgmain"
        >

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imagen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/novo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:text="Registro de UsuÃ¡rio"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:hint="Digite seu email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtsenha"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtnomecompleto"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:hint="Nome completo"
            android:inputType=""
            android:textAlignment="center"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txttelefone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="phone"
            android:hint="Telefone"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/txtapelido"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:hint="Apelido"
            android:inputType=""
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtnivelusuario"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/txtpontosusuario"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnsalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/corqualquer"
            android:fontFamily="casual"
            android:text="Cadastrar"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtviewsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:text="Login"
            android:textColorHint="#00922D2D"
            android:textSize="18sp"
            android:textStyle="bold" />




    </LinearLayout>
    </ScrollView>


    </RelativeLayout>
